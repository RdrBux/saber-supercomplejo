---
import Logo from '../assets/logo.svg'
import NavLink from './NavLink.astro';
interface Props {
	style: 'dark' | 'light';
}

const { style } = Astro.props;
---

<nav class={`${style === 'dark' ? 'border-neutral-950/30 text-neutral-950' : 'border-neutral-950/40 text-[#FBF4E6]'} container mx-auto px-4 lg:px-16 flex items-center justify-between absolute z-20 top-0 left-0 right-0 py-3 border-b-2`}>
	<a aria-label="Inicio" href="/">
		<div class={`${style === 'dark' ? 'bg-neutral-950/30' : 'bg-transparent'} p-1 rounded-full w-12 aspect-square grid place-content-center`}>
			<img class="w-full" src={Logo.src} alt="">
		</div>
	</a>

	<ul class={`${style === 'dark' ? 'text-tertiary-50' : 'text-neutral-500'} hidden lg:flex gap-2 font-medium`}>
		<li><NavLink href='/teoria' text='La teorÃ­a' style={style} /></li>
		<li><NavLink href='/actores' text='Los actores' style={style} /></li>
		<li><NavLink href='/camino' text='El camino' style={style} /></li>
	</ul>

	<button class={`${style === 'dark' ? 'border-black/30 text-tertiary-50' : 'border-black/20 text-neutral-500'} py-2 px-4 bg-neutral-950/30  rounded`}>ES / EN</button>
</nav>
